<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postFL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/postLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/post_design4"
        android:layout_margin="70dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/galleryCV"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/light_orange"
            android:outlineSpotShadowColor="@color/dark_gray"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/galleryLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBtnGallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/purple1"
                    android:src="@drawable/gallery_icon" />

                <TextView
                    android:id="@+id/galleryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:text="Gallery"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cameraCV"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/light_orange"
            android:outlineSpotShadowColor="@color/dark_gray"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/cameraLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camBtnGallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/purple1"
                    android:src="@drawable/camera_icon" />

                <TextView
                    android:id="@+id/cameraTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:text="Camera"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>